        @Html.Label("MaNV", "Mã Nhân Viên", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" class="form-control" name="MaNV" value="@maNV" readonly />
        </div>
    </div>*@
